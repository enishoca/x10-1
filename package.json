{
  "name": "@theatersoft/x10",
  "version": "1.5.3",
  "description": "Bus service module for X10 devices",
  "repository": "theatersoft/x10",
  "main": "x10.js",
  "engines" : { "node" : ">=7.6.0" },
  "scripts": {
    "BUS": "BUS=`[ -f .bus ] && cat .bus` AUTH=`[ -f .auth ] && cat .auth`",
    "DEVBUS": "BUS=`[ -f .dev.bus ] && cat .dev.bus` AUTH=`[ -f .dev.auth ] && cat .dev.auth`",
    "DEVRUN": "npm run DEVBUS -- node",
    "RUN": "npm run BUS -- node",
    "build": "time -p node build.js && ls -l dist",
    "build:dist": "DIST=true npm run build",
    "link": "(cd dist; npm link); npm link @theatersoft/x10 @theatersoft/device; cd dist; npm link @theatersoft/bus",
    "bus:start": "npm explore @theatersoft/bus -- npm run start",
    "start": "npm run RUN -- dist/start.js",
    "start:dev": "npm run DEVRUN -- dist/start.js",
    "start:theater": "ssh -tt theater.local 'cd Theatersoft/x10; npm run start'",
    "debug": "npm run BUS -- node --inspect-brk dist/start.js",
    "debug:theater": "ssh -tt theater.local 'cd Theatersoft/x10; npm run BUS -- node --inspect-brk dist/start.js'",
    "debug:dev": "npm run DEVBUS -- node --inspect-brk dist/start.js",
    "publish": "node build.js publish"
  },
  "author": "Rob Huehn <rob@theatersoft.com>",
  "license": "AGPL-3.0",
  "distDependencies": {
    "@theatersoft/bus": "~1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "remote-redux-devtools": "^0.5.7",
    "usb": "^1.1.2"
  },
  "devDependencies": {
    "@theatersoft/device": "~1",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-babili": "0.0.3",
    "rollup": "^0.36.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-ignore": "^1.0.3",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-strip": "^1.1.1",
    "shelljs": "^0.7.4"
  }
}
